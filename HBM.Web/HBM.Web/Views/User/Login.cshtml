@model HBM.Web.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="text-center">
    @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-center", id = "loginForm", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <h4 class="h3 mb-3 font-weight-normal">Log in</h4>
        <hr />

        @Html.LabelFor(m => m.UserIdent, new { @class = "sr-only" })
        <div>
            @Html.TextBoxFor(m => m.UserIdent, new { @class = "form-control", placeholder = "Email adress or nickname" })
            @Html.ValidationMessageFor(m => m.UserIdent, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
        <div>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-offset-2 mt-4 mb-3">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-lg btn-primary btn-block" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Register as a new user", "Register")
        </p>
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}