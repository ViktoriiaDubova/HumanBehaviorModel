@model HBM.Web.ViewModels.UserEditViewModel
@{
    ViewBag.Title = "Edit";
}

<div class="">

    @using (Html.BeginForm("Edit", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", id = "editForm", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.Id)
        <h4 class="h3 mb-3 font-weight-normal">Edit @Model.UserName's info</h4>
        <hr />

        var img = Model.ImageUrl ?? "~/Content/img/no-image.png";
        img = Url.Content(img);
        <img class="img-preview col-md-3" src="@img" alt="">
        <br />

        @Html.LabelFor(m => m.ImageFile, "New avatar")
        <div class="mb-4">
            <input type="file" name="ImageFile" class="form-control" />
            @Html.ValidationMessageFor(m => m.ImageFile, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(m => m.FullName)
        <div>
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Specify your real name" })
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(m => m.About)
        <div>
            @Html.TextAreaFor(m => m.About, 3, 60, new { @class = "form-control", placeholder = "Tell something about yourself" })
            @Html.ValidationMessageFor(m => m.About, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="mt-4 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </div>
    }
</div>