@model HBM.Web.ViewModels.RolePermissionsViewModel

@{ 
    ViewBag.Title = "Assign permissions";
}

@using (Html.BeginForm("AssignPermissions", "Manage", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.RoleId)
    <div class="form-group">
        <p class="col-form-label">Permissions for role: @Model.RoleKey</p>
    </div>
    <div class="form-group">        
        @Html.ListBoxFor(m => m.SelectedPermissions, Model.Permissions, new { @class="form-control" })
    </div>

    <div class="form-group">
        <div class="mt-4 col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
        </div>
    </div>
}